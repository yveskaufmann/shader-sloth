<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.yvka.shadersloth.controller.VectorEditorController">
    <children>
        <HBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="22.0" prefWidth="200.0" />
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <TextField promptText="X" GridPane.rowIndex="1" fx:id="xTextField" />
                <TextField fx:id="yTextField" promptText="Y" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="zTextField" promptText="Z" GridPane.columnIndex="2" GridPane.rowIndex="1"  />
                <Label fx:id="vectorLabel" text="Position" />
            </children>
        </GridPane>
    </children>
    <padding>
        <Insets left="5.0" right="5.0" top="5.0" />
    </padding>
</VBox>
