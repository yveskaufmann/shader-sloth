<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.*?>
<?import eu.yvka.shadersloth.app.controls.*?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <GridPane hgap="3.0" vgap="5.0">
        <columnConstraints>
          <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints vgrow="NEVER" />
          <RowConstraints vgrow="NEVER" />
          <RowConstraints vgrow="NEVER" />
            <RowConstraints vgrow="NEVER" />
            <RowConstraints vgrow="NEVER" />
            <RowConstraints vgrow="NEVER" />
            <RowConstraints vgrow="NEVER" />
        </rowConstraints>
         <children>
            <TextField fx:id="lightId" promptText="%light.id" GridPane.columnSpan="3" />
            <ColorPicker fx:id="lightIntensity" editable="true" maxWidth="1.7976931348623157E308" GridPane.columnSpan="2" GridPane.rowIndex="2" />
            <ChoiceBox value="%light.type.point" fx:id="lightTypeChoice" prefHeight="25.0" prefWidth="2165.0" GridPane.columnSpan="3" GridPane.rowIndex="1"/>
            <TextField GridPane.columnIndex="2" GridPane.rowIndex="4" />
            <Label text="%light.energy" GridPane.rowIndex="3" />
            <Slider fx:id="lightEnergySlider" GridPane.columnSpan="2" GridPane.rowIndex="4" />
            <NumberInput fx:id="lightEnergy" GridPane.columnIndex="2" GridPane.rowIndex="4" />
            <Label text="%light.position" GridPane.rowIndex="5" />
            <NumberInput fx:id="xPosition" label="X" promptText="X" GridPane.rowIndex="6" />
            <NumberInput fx:id="yPosition" label="Y" promptText="Y" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            <NumberInput fx:id="zPosition" label="Z" promptText="Z" GridPane.columnIndex="2" GridPane.rowIndex="6">
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </NumberInput>
         </children>
      </GridPane>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
